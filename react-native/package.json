{
  "name": "@my-groove/ffmpeg-kit-react-native",
  "version": "6.0.8",
  "description": "FFmpeg Kit for React Native",
  "main": "src/index",
  "types": "src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "scripts": {
    "test": "jest",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "android",
    "ffmpeg",
    "ffmpeg-kit",
    "ios"
  ],
  "repository": "https://github.com/my-groove/ffmpeg-kit",
  "author": "MyGroove <support@mygroove.com> (https://www.mygroove.com)",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/my-groove/ffmpeg-kit/issues"
  },
  "homepage": "https://github.com/my-groove/ffmpeg-kit",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.7.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^7.0.0",
    "@types/jest": "^29.5.4",
    "@babel/runtime": "^7.27.0",
    "@types/react": "~18.2.45",
    "commitlint": "^17.7.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "pod-install": "^0.1.39",
    "prettier": "^3.0.2",
    "react": "18.2.0",
    "react-native": "0.73.5",
    "release-it": "^16.1.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
